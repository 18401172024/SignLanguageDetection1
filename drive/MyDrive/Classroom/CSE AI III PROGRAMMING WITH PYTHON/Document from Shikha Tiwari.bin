    "def sharing_of_number(n, a, b, c):  #defining function where n is no. of coins \n",
    "# giving condition\n",
    "# if anyone get zero then sharing is invalid \n",
    "    if a==0 or b==0 or c==0:\n",
    "        return False\n",
    "# if any two out of the three person getting equal no.of coins \n",
    "    if a==b or b==c or c==a:\n",
    "        return False\n",
    "# if any coin is remains after sharing\n",
    "    if n-(a+b+c)==0:\n",
    "        return False\n",
    "    else:\n",
    "        return True\n",
    "if sharing_of_number(5,1,2,2): #taking no. of coins and sharing coins\n",
    "    print(\"sharing of coin is valid\")\n",
    "else:\n",
    "    print(\"sharing of coin is invalid\")\n"
   ]
